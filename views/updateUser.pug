
extends base
block content
	section.mainPageSection.flex.flex-column
		.login-form
			h2.heading-secondary.ma-bt-lg Update your account
			form.form.updateUser
				.form-group
					label(for="image") Name 
					input(type="text", id="nameUpdate", name="name", required )
				.form-group
					label(for="title") Email Address
					input(type="text", id="emailUpdate", name="email", required, placeholder='you@example.com')
				.form-group.buttonsAccept.flex.flex-column
					button(class='buttonArticle', type='submit') Update 
			h2 Update your password
			form.form.updatePassword
				.form-group
					label.form__label(for='passwordCurrent') Current Password
					input#passwordCurrent.form__input(type='password', placeholder='••••••••', required, minlength='8')
				.form-group
					label.form__label(for='passwordNew') new Password
					input#passwordNew.form__input(type='password', placeholder='••••••••', required, minlength='8')
				.form-group
					label.form__label(for='passwordNewConfirm') Confirm New Password
					input#passwordNewConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
				.form-group.buttonsAccept.flex.flex-column
					button(class='buttonArticle', type='submit') Reset Password 
